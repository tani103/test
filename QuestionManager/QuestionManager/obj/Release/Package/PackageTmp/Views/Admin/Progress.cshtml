
@{
    ViewBag.Title = "IF E-Learningシステム";
}

<body>
    <div id="main" class="page">
        <h2>課題到達度</h2>
        受験者ごとに全課題中の合格した割合をグラフに表します。
        <br />
        @using (Html.BeginForm())
        {
            @Html.TextBox("first", ViewData["FirstYear"], new { style = "width: 40px" })@:年から @Html.TextBox("final", ViewData["FinalYear"], new { style = "width: 40px" }) 年に作成されたアカウントのデータを表示
            <input type="submit" name="submit" value="更新" />
        }

        <p>
            <ul>
                @{ List<QuestionManager.Models.Categories> s = (List<QuestionManager.Models.Categories>)ViewData["categories"];}
                @for (int j = 0; j < s.Count; j++)
                {
                    <li>
                        @Html.ActionLink(s[j].CategoryName, "Progress", new { categoryID = s[j].CategoryID })
                    </li>
                }
            </ul>
        </p>
        <br />
        <br />
        @if (Model.Count == 0 || Model.Contains(null))
        {
            <h3>
                データがないか、合格者がいません。
            </h3>
            return;
        }
        <table class="highchart" data-graph-container=".highchart-container" data-graph-type="column"
               data-graph-yaxis-1-max="100" style="display: none">
            <thead>
                <tr>
                    <th>
                        名前
                    </th>
                    <th>
                        到達度(%)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.ChallengeProgress
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="highchart-container">
        </div>
        @section Scripts{
            <script src="~/Scripts/highcharts.js" type="text/javascript"></script>
            <script src="~/Scripts/jquery.highchartTable-min.js" type="text/javascript"></script>
            <script>
                $(document).ready(function () {
                    $('table.highchart').highchartTable();
                });
            </script>
        }
        <div id="footer">
        </div>
    </div>
</body>